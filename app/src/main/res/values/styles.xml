<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--VIEW ELEMENTS PART-->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/progress_bar_green</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PickerString" parent="AppTheme.Picker" >
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="MySwitchStyle">
        <item name="colorControlActivated">@color/progress_bar_green</item>
    </style>


    <style name="GreenProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/inner_padding_small</item>
        <item name="android:progressDrawable">@drawable/horizontal_progress_green</item>
    </style>

    <style name="GreenRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/progress_bar_green</item>
    </style>

    <style name="FrameBase">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple_border_empty</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="FrameSmallEmpty" parent="FrameBase">
        <item name="android:layout_width">@dimen/button_width</item>
    </style>

    <style name="FrameBigEmpty" parent="FrameBase">
        <item name="android:layout_width">@dimen/button_width_big</item>
    </style>

    <style name="FrameMidBreeze" parent="FrameBase">
        <item name="android:layout_width">@dimen/button_width_mid</item>
        <item name="android:background">@drawable/button_breeze_selector</item>
    </style>

    <style name="FrameProfile" parent="FrameBase">
        <item name="layout_columnWeight">1</item>
        <item name="layout_gravity">fill</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginTop">@dimen/inner_padding_micro</item>
        <item name="android:layout_marginBottom">@dimen/inner_padding_micro</item>
        <item name="android:layout_marginStart">@dimen/inner_padding_tiny</item>
        <item name="android:layout_marginEnd">@dimen/inner_padding_tiny</item>
        <item name="android:background">@drawable/ripple_empty_gray_corners</item>

    </style>

    <style name="FrameMainBase">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="FrameMainButton" parent="FrameMainBase">
        <item name="layout_columnWeight">1</item>
        <item name="layout_gravity">fill</item>
        <item name="android:background">@drawable/ripple_empty_gray</item>
        <item name="android:layout_height">@dimen/main_button_height</item>
        <item name="android:padding">@dimen/inner_padding_big</item>
    </style>

    <style name="FrameMainStatus" parent="FrameMainBase">
        <item name="android:clickable">false</item>
        <item name="android:layout_height">@dimen/main_status_button_height</item>
        <item name="android:padding">@dimen/inner_padding</item>
        <item name="android:background">@drawable/ripple_empty_white</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RobotoThin">
        <item name="fontPath">fonts/roboto_thin.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--TEXT PART-->
    <style name="AlarmDaySelectText">
        <item name="fontPath">fonts/roboto_medium.ttf</item>
        <item name="android:layout_width">@dimen/days_size_small</item>
        <item name="android:layout_height">@dimen/days_size_small</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_marginStart">@dimen/inner_padding_tiny</item>
    </style>

    <style name="AlarmDaySelectTextBig">
        <item name="fontPath">fonts/roboto_medium.ttf</item>
        <item name="android:layout_width">@dimen/days_size_normal</item>
        <item name="android:layout_height">@dimen/days_size_normal</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_standart</item>
        <item name="android:layout_marginStart">@dimen/inner_padding_small</item>
    </style>


    <style name="InfoWhiteText">
        <item name="fontPath">fonts/roboto_medium.ttf</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_standart</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InfoBreezeBtnText" parent="InfoWhiteText">
        <item name="android:background">@drawable/button_breeze_selector_c12</item>
        <item name="android:paddingTop">@dimen/inner_padding_micro</item>
        <item name="android:paddingBottom">@dimen/inner_padding_micro</item>
        <item name="android:paddingStart">@dimen/inner_padding</item>
        <item name="android:paddingEnd">@dimen/inner_padding</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="InfoLightBlackText" parent="InfoWhiteText">
        <item name="android:textColor">@color/light_black</item>
    </style>

    <style name="InfoLightBlackTextBold" parent="InfoLightBlackText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileBoldSmallText" parent="InfoLightBlackTextBold">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="InfoGrayText" parent="InfoWhiteText">
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="InfoGrayTextSmall" parent="InfoGrayText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="EditTextParent" parent="RobotoThin">
        <item name="android:maxLines">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:paddingLeft">@dimen/inner_padding_tiny</item>
        <item name="android:paddingRight">@dimen/text_size_tiny</item>
    </style>

    <style name="LoginEditText" parent="EditTextParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_standart</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorHint">@color/text_white_hint</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="LoginEditTextItem" parent="EditTextParent">
        <item name="android:layout_width">@dimen/button_width_big</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textSize">@dimen/text_size_standart</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorHint">@color/text_white_hint</item>
        <item name="android:background">@drawable/ripple_border_empty</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>
    <!--<item name="android:background">@android:color/transparent</item>-->
    <style name="ChangePasswordEditText" parent="EditTextParent">
        <item name="android:layout_width">@dimen/button_width_big</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/light_black</item>
        <item name="android:layout_marginTop">@dimen/inner_padding_micro</item>
        <item name="android:background">@drawable/btn_empty_gray_c4</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    </style>

    <style name="MidWhiteText" parent="RobotoThin">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="TextMidWhiteSel" parent="RobotoThin">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/text_white_selector</item>
    </style>

    <style name="TabLayoutStyle" >
        <item name="android:background">@color/light_gray</item>
        <item name="tabIndicatorColor">@color/light_black</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
        <item name="tabSelectedTextColor">@color/text_white</item>
        <item name="tabTextColor">@color/text_white</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabMaxWidth">150dp</item>
        <item name="tabMinWidth">150dp</item>
    </style>

    <style name="TabLayoutStyleText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PlusGrayButtons">
        <item name="android:layout_width">@dimen/button_plus</item>
        <item name="android:layout_height">@dimen/button_plus</item>
        <item name="android:layout_marginTop">@dimen/inner_padding</item>
        <item name="android:padding">@dimen/inner_padding</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/ripple_empty_gray</item>
    </style>

    <style name="ChangePasswordLinearLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/inner_padding</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="WeightHorizontalText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">@dimen/inner_padding_small</item>
        <item name="android:paddingBottom">@dimen/inner_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/weight_horizontal_back</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="Widget">
    </style>
    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>
    <style name="Widget.ProgressBar.Vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/vertical_progress_bar</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minWidth">1dip</item>
        <item name="android:maxWidth">12dip</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:layout_centerHorizontal">true</item>


        <item name="android:progress">100</item>
    </style>

    <style name="WeightBottomWhiteText" parent="InfoWhiteText">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_smaller</item>
        <item name="android:layout_marginBottom">@dimen/inner_padding_micro</item>
    </style>

    <style name="WeightBottomWhiteView">
        <item name="android:layout_width">4dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/inner_padding_bigger</item>
        <item name="android:background">@drawable/vertical_white_rounded</item>
    </style>

    <style name="WeightBottomRelLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BmiValueWhiteText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:background">@drawable/bmi_value_background</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLength">4</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ProgressLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/inner_padding_bigger</item>
        <item name="android:paddingStart">@dimen/inner_padding</item>
        <item name="android:paddingEnd">@dimen/inner_padding</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="BmiButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/inner_padding_small</item>
        <item name="android:background">@drawable/rounded_corners_white_c8</item>
        <item name="android:paddingStart">@dimen/inner_padding_giant</item>
        <item name="android:paddingEnd">@dimen/inner_padding_giant</item>
        <item name="android:paddingTop">@dimen/inner_padding_micro</item>
        <item name="android:paddingBottom">@dimen/inner_padding_micro</item>
    </style>

    <!--<item name="android:layout_marginStart">@dimen/inner_padding_bigger</item>-->

</resources>
