<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/content_main"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/login_top_margin"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/lang_ar_button"
            style="@style/FrameSmallEmpty">

            <TextView
                style="@style/InfoWhiteText"
                android:layout_gravity="center"
                android:text="AR"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/lang_en_button"
            style="@style/FrameSmallEmpty"
            android:layout_marginTop="@dimen/inner_padding_tiny">

            <TextView
                style="@style/InfoWhiteText"
                android:layout_gravity="center"
                android:text="EN"/>
        </FrameLayout>
    </LinearLayout>


</FrameLayout>