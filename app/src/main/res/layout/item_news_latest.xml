<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/inner_padding_small"
              android:padding="@dimen/inner_padding"
              android:background="@color/background_gray"
              android:orientation="vertical">

    <TextView
        android:id="@+id/item_title"
        style="@style/InfoLightBlackTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_image"
        android:layout_marginTop="@dimen/inner_padding_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/item_text"
        style="@style/InfoLightBlackText"
        android:maxLines="3"
        android:layout_marginTop="@dimen/inner_padding_small"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/inner_padding_small">

        <ImageView
            android:id="@+id/item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_share"
            android:padding="@dimen/inner_padding_micro"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_read_more"
            style="@style/InfoWhiteText"
            android:textColor="@color/main_breeze"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="Read More"/>
    </RelativeLayout>
</LinearLayout>