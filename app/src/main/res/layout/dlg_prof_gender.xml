<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_white"
              android:padding="@dimen/inner_padding"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/InfoLightBlackTextBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SELECT GENDER"/>

    <RadioGroup
        android:id="@+id/gender_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/inner_padding">

        <RadioButton
            android:id="@+id/gender_radio_male"
            android:theme="@style/GreenRadioButton"
            style="@style/InfoLightBlackTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MALE"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/gender_radio_female"
            android:theme="@style/GreenRadioButton"
            style="@style/InfoLightBlackTextBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FEMALE"
            android:layout_weight="1"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <TextView
            android:id="@+id/cancel_button"
            style="@style/InfoLightBlackTextBold"
            android:textColor="@color/progress_bar_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/inner_padding_tiny"
            android:text="CANCEL"/>

        <TextView
            android:id="@+id/save_button"
            style="@style/InfoLightBlackTextBold"
            android:textColor="@color/progress_bar_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/inner_padding_tiny"
            android:text="SAVE"/>
    </LinearLayout>

</LinearLayout>