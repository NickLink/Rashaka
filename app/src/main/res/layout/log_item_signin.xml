<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/item_signin_layout"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/login_background">

    <FrameLayout
        android:id="@+id/signin_email_button"
        style="@style/FrameBigEmpty"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <rashakacom.rashaka.utils.helpers.views.edittext.ClearableEditText
            android:id="@+id/log_email"
            style="@style/LoginEditText"
            android:hint="EMAIL"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/signin_password_button"
        style="@style/FrameBigEmpty"
        android:layout_marginTop="@dimen/inner_padding_tiny"
        app:layout_constraintTop_toBottomOf="@+id/signin_email_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <rashakacom.rashaka.utils.helpers.views.edittext.ClearableEditText
            android:id="@+id/log_password"
            style="@style/LoginEditText"
            android:hint="PASSWORD"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/signin_button"
        style="@style/FrameMidBreeze"
        android:layout_marginTop="@dimen/inner_padding_big"
        app:layout_constraintTop_toBottomOf="@+id/signin_password_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/signin_button_text"
            style="@style/LoginEditText"
            android:textColor="@color/light_black"
            android:text="SIGN IN"/>
    </FrameLayout>

    <TextView
        android:id="@+id/signin_forgot_button"
        style="@style/TextMidWhiteSel"
        android:textSize="@dimen/text_size_tiny"
        android:text="Forgot your details?"
        app:layout_constraintLeft_toLeftOf="@+id/signin_button"
        android:layout_marginTop="@dimen/inner_padding_small"
        app:layout_constraintTop_toBottomOf="@+id/signin_button"/>

    <TextView
        android:id="@+id/signin_create_button"
        style="@style/TextMidWhiteSel"
        android:textSize="@dimen/text_size_tiny"
        android:text="Create a new account"
        app:layout_constraintRight_toRightOf="@+id/signin_button"
        android:layout_marginTop="@dimen/inner_padding_small"
        app:layout_constraintTop_toBottomOf="@+id/signin_button"/>

</android.support.constraint.ConstraintLayout>