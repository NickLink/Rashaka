<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:color="@color/light_gray"
        tools:targetApi="lollipop"> <!-- ripple effect color -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <!-- This color is needed to be set - doesn't affect anything -->
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/buttons_corners_c8"/>
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/main_button_divider" />
        </shape>
    </item>
    <item android:id="@+id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_white" /> <!-- background color -->
            <corners android:radius="@dimen/buttons_corners_c8"/>
            <stroke
                android:width="@dimen/button_stroke"
                android:color="@color/main_button_divider" />
        </shape>
    </item>
</ripple>